<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <form action="/Default/SendMessage/" method="POST">
            <div class="form-group my-2">
                <label for="Name" class="form-label fw-bolder">Adınız</label>
                <input class="form-control" type="text" id="Name" name="Name" required>
            </div> 
            <div class="form-group my-2">
                <label for="Surname" class="form-label fw-bolder">Soyadınız</label>
                <input class="form-control" type="text" id="Surname" name="Surname" required>
            </div>
            <div class="form-group my-2">
                <label for="Subject" class="form-label fw-bolder">Mesaj Başlığı</label>
                <input class="form-control" type="text" id="Subject" name="Subject" required>
            </div>
           
            <div class="form-group my-2">
                <label for="Mail" class="form-label fw-bolder">Mail</label>
                <input class="form-control" type="email" id="Mail" name="Mail" required>
            </div>
            <div class="form-group my-2">
                <label for="Content" class="form-label fw-bolder">Mesajınız</label>
                <textarea class="form-control" style="resize: none;" id="Content" name="Content" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit">Gönder</button>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Form submit olayını dinle
        $("#sendMessageForm").submit(function (event) {
            // Formun normal submit işlemini engelle
            event.preventDefault();

            // Form verilerini al
            var formData = $(this).serialize();

            // AJAX çağrısı yap
            $.ajax({
                type: "POST",
                url: "/DefaultController/SendMessage", // ControllerName, controller'ınızın adıyla değiştirilmelidir.
                data: formData, // Gönderilen veriler
                success: function (result) {
                    // Başarılı olduğunda, sayfayı yenilemeden önce yönlendirme işlemini gerçekleştir
                    window.location.href = '/Default/Index'; // İlgili URL'yi ve eylemi projenizin yapısına göre ayarlayın
                },
                error: function (error) {
                    console.error("Hata oluştu: " + error);
                }
            });
        });
    });
</script>